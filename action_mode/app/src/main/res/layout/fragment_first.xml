<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="36dp"
    android:orientation="vertical"
    tools:context=".FirstFragment">

    <Button
        android:id="@+id/activity_primary_action_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_primary_action_mode" />

    <Button
        android:id="@+id/activity_floating_action_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_floating_action_mode"/>

    <Button
        android:id="@+id/view_primary_action_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_primary_action_mode" />

    <Button
        android:id="@+id/view_floating_action_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_floating_action_mode"/>
</LinearLayout>